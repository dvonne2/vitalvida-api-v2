########################################################
# Application
########################################################
APP_NAME=VitalVida
# local | staging | production
APP_ENV=local
# Generated via `php artisan key:generate`
APP_KEY=
# false in staging/production to avoid leaking stack traces
APP_DEBUG=true
# Update in staging to your domain, e.g. https://staging.vitalvida.name.ng
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# file | redis (use redis for production if available)
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

########################################################
# Logging
########################################################
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
# debug | info | notice | warning | error | critical | alert | emergency
LOG_LEVEL=debug

########################################################
# Database (use MySQL/MariaDB or Postgres in staging)
########################################################
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=vitalvida
DB_USERNAME=vitalvida
DB_PASSWORD=secret

########################################################
# Cache / Session / Queue
########################################################
# file | redis | database | memcached (file acceptable for staging)
CACHE_STORE=file
# CACHE_PREFIX=

# file | database | redis
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
# e.g. .vitalvida.name.ng for subdomain cookies; null for localhost
SESSION_DOMAIN=null

# sync | database | redis | sqs | beanstalkd (use sync if no worker)
QUEUE_CONNECTION=sync

########################################################
# Redis (optional – for cache/session/queue)
########################################################
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

########################################################
# Broadcasting / Filesystem
########################################################
BROADCAST_CONNECTION=log
# local | public | s3
FILESYSTEM_DISK=public

########################################################
# Mail (use log in staging or configure SMTP)
########################################################
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

########################################################
# Sanctum / CORS (adjust for your frontend domains)
########################################################
# Comma-separated list of frontends that share auth cookies
SANCTUM_STATEFUL_DOMAINS=localhost:8080,localhost:3000
# Cookie domain (prefix with dot for subdomains). Example: .vitalvida.name.ng
SESSION_DOMAIN=localhost
# CORS allowed origins (comma-separated or *) – tighten in staging
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

########################################################
# AWS / S3 (optional)
########################################################
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

########################################################
# Payments & Delivery OTP (system-controlled stages)
########################################################
# Example placeholders – your Laravel expert will wire these securely
PAYMENT_PROVIDER=bank_pos
PAYMENT_WEBHOOK_SECRET=
OTP_SENDER_CHANNEL=sms
OTP_EXPIRY_MINUTES=15

########################################################
# Vite / Frontend
########################################################
VITE_APP_NAME="${APP_NAME}"
VITE_API_BASE="${APP_URL}/api"
